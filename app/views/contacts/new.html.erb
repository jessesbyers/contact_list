<h1> New Contact Form </h1>

<%= form_for(@contact) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :address %>
    <%= f.text_field :address %>
    <br>

    <%= f.label :phone %>
    <%= f.text_field :phone %>
    <br>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>

    <%= f.fields_for :pets do |ff| %>
        <%= ff.label :name %>
        <%= ff.text_field :name %>
        <br>

        <%= ff.label :breed %>
        <%= ff.text_field :breed %>
        <br>
    <% end %>

    <%= f.submit %>
<% end %>
